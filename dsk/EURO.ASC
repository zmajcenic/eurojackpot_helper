1 'EUROJACKPOT HELPER 1.2
10 DEFINT A-Z
20 DIM X(5),Y(2)
30 COLOR 15,10,10:SCREEN 2
40 BLOAD "euro.sc2",S
50 OPEN "GRP:" FOR OUTPUT AS #1
60 LINE (64,152)-(183,159),10,BF
70 PRESET (64,152),10:COLOR 1
80 PRINT #1,"ANY KEY TO DRAW"
140 K$=INPUT$(1)
150 T=INT(RND(-TIME)):COLOR 15,10,10
160 FOR I=0 TO 4
170 LINE (I*32,168)-(I*32+23,191),14,BF
180 NEXT I
190 FOR I=6 TO 7
200 LINE (I*32,168)-(I*32+23,191),6,BF
210 NEXT I
240 REM Brojevi 1-50
250 COLOR 1:C=14:M=50
260 GOSUB 420:X(0)=T:I=0:GOSUB 460:GOSUB 510
270 FOR I=1 TO 4
280 GOSUB 420
290 FOR J=0 TO I-1
300 IF T=X(J) THEN GOTO 280
310 NEXT J
320 X(I)=T:GOSUB 460:GOSUB 510
330 NEXT I
340 REM Brojevi 1-12
350 COLOR 15:C=6:M=12
360 GOSUB 420:Y(0)=T:I=6:GOSUB 460:GOSUB 510
370 GOSUB 420
380 IF T=Y(0) GOTO 370
390 Y(1)=T:I=7:GOSUB 460:BEEP
400 K$=INPUT$(1)
410 GOTO 160
420 REM Random broj
440 T=INT(RND(1)*M)+1
450 RETURN
460 REM Ispis
470 IF T<10 THEN W=8:L=1 ELSE W=16:L=2
480 PRESET (I*32+(24-W)/2+1,176),C
490 PRINT #1,RIGHT$(STR$(T),L)
500 RETURN
510 REM pause
520 TIME=0
530 BEEP
540 IF TIME<50 THEN GOTO 540
550 RETURN